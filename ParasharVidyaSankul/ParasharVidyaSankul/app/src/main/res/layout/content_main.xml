<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.skyzone18.ParasharVidyaSankul.Activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/news_slider"
            android:layout_width="match_parent"
            android:layout_height="180dp">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/about_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/about"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/about" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/card_aim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/aim"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/aim" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/card_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/man"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/management" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/card_academic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/academic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"

                        android:background="@drawable/academy" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/card_admission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/admission"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/admission" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/card_staff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/staff"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/staff" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/card_faclity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/faclity"
                        android:layout_width="90dp"
                        android:layout_height="90dp"

                        android:background="@drawable/facility" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/card_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/event"
                        android:layout_width="90dp"
                        android:layout_height="90dp"

                        android:background="@drawable/event" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/card_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/news"
                        android:layout_width="90dp"
                        android:layout_height="90dp"

                        android:background="@drawable/news" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/card_galler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/gallery"
                        android:layout_width="90dp"
                        android:layout_height="90dp"

                        android:background="@drawable/gallery" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/card_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/notice"
                        android:layout_width="90dp"
                        android:layout_height="90dp"

                        android:background="@drawable/noticee" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/card_homework"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_homework"
                        android:layout_width="90dp"
                        android:layout_height="90dp"

                        android:background="@drawable/home_work" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/card_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/aje"
                        android:layout_width="90dp"
                        android:layout_height="90dp"

                        android:background="@drawable/timetable" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/card_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/video"
                        android:layout_width="90dp"
                        android:layout_height="90dp"

                        android:background="@drawable/calendar" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />

                <LinearLayout
                    android:id="@+id/card_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/login"
                        android:layout_width="90dp"
                        android:layout_height="90dp"

                        android:background="@drawable/student_admission" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.02"
                    android:background="#cec9c9" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>
